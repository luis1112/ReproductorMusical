<div class="container">
    <form action="/album/upload-image-album" enctype="multipart/form-data" method="POST" id="uploadImage">
        <h2>AÃ±adir Imagen al Album</h2>
        <%-locals.flash%>
        <div class="form-group">
            <label for="artist">Seleccionar Album</label>
            <select name="external" class="form-control" id="albumImage">
                <%albums.forEach(function(album){%>
                    <option value="<%=album.external_id%>"><%=album.title%></option>
                <%});%>
            </select>
        </div>
        <div class="form-group">
            <label for="image">Selecciona la Imagen que deseas subir</label>
            <input type="file" name="image" placeholder="Nombres" class="form-control">
        </div>
        <div class="form-group">
            <button class="btn btn-success btn-block">
                Subir Imagen
            </button>
        </div>
    </form>
</div>

