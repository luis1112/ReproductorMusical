<div class="container">
    <form action="/song/saveSong" method="POST">
        <h3 class="text-center">Agregar Canción</h3>
        <%-locals.flash%>
        <div class="form-group">
            <input type="number" name="number" min="0" max="30" placeholder="Número" class="form-control" required>
        </div>
        <div class="form-group">
            <input type="text" name="title" placeholder="Título" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="album">Seleccionar Album</label>
            <select name="album" class="form-control" id="albumList">
            <%albums.forEach(function(album){%>
                <option value="<%=album.id%>"><%=album.title%></option>
            <%})%>
            </select>
        </div>
        <div class="form-group">
            <button class="btn btn-success btn-block">
                Guardar
            </button>
        </div>
    </form>
</div>