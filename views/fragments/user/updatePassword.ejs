<div class="container">
    <h3 class="text-center">Actualización de la Contraseña</h3>
    <%- locals.flash %>
    <form action="/user/updatePassword/<%=user.external_id%>" method="POST" id="updatePassword">
        <div class="form-group">
            <label for="oldPassword" class="font-weight-bold">Contraseña Antigua</label>
            <input type="password" name="oldPassword" placeholder="Contraseña Antigua" class="form-control" autofocus
                id="oldPassword">
        </div>
        <div class="form-group">
            <label for="newPassword" class="font-weight-bold">Contraseña Nueva</label>
            <input type="password" name="newPassword" placeholder="Contraseña Nueva" class="form-control"
                id="newPassword">
        </div>
        <div class="form-group">
            <button class="btn btn-success btn-block">
                Actualizar
            </button>
        </div>
    </form>
</div>