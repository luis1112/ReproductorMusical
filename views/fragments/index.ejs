<style>
    @media screen and (max-width: 980px) {
        #images {
            display: none;
        }
    }
</style>

<div class="container">
    <div class="media">
        <div class="media-body text-center">
            <h2>Bienvenido de Nuevo <%=user.firstName%></h2>
            <p>Encuentra la mejor música disponible para ti</p>
        </div>
        <img src="http://localhost:3000/user/get-image-user/<%=user.image%>" class="ml-3 rounded" height="100px">
    </div>

    <div id="images" class="carousel slide mt-2" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://www.pilardetodos.com/media/k2/items/cache/1ec2a12723aafca982d5b879ea870cbd_XL.jpg"
                    class="d-block mx-auto" height="500px">
                <div class="carousel-caption d-none d-md-block" style="background:rgba(0, 0, 0, 0.34);">
                    <h5>Disfruta del Mejor Contenido</h5>
                    <p>Encontrarás los mejores Artistas y Canciones</p>
                </div>
            </div>
            <% artists.forEach(function(artist){ %>
            <div class="carousel-item">
                <img src="http://localhost:3000/artist/get-image-artist/<%=artist.image%>" class="d-block mx-auto"
                    height="500px">
                <div class="carousel-caption d-none d-md-block" style="background:rgba(0, 0, 0, 0.34);">
                    <h5><%=artist.name%></h5>
                    <p><%=artist.description%></p>
                </div>
            </div>
            <%});%>
        </div>
        <a class="carousel-control-prev" href="#images" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#images" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

</div>